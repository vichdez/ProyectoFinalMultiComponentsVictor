<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/colorPrimary"
        tools:context=".login.OlvideContrasenia" android:orientation="vertical" android:gravity="center"
        android:padding="10dp">

    <TextView
        android:text="Correo electrÃ³nico"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvCorreoFP"/>
    <androidx.appcompat.widget.AppCompatEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/etCorreoFP" android:layout_marginBottom="10dp"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck"/>

    <TextView
            android:text="@string/npass"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/tvLabelFP"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
        android:hint="min. 6 caracteres"
            android:ems="10"
            android:id="@+id/etFP" android:layout_marginBottom="10dp"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck"/>
    <TextView
            android:layout_width="match_parent"

        android:textColor="@color/white"
            android:layout_height="wrap_content" android:id="@+id/tvLabelFP2" android:text="@string/rpass"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"

            android:ems="10"
            android:id="@+id/etFP2" android:layout_marginBottom="10dp"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck"/>
    <Button
            android:text="ACEPTAR"
        android:backgroundTint="?attr/colorPrimaryVariant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/btnCambiar"
            android:onClick="comprobarNuevaContrasenia"/>
</LinearLayout>