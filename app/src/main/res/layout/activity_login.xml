<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".login.Login"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#1956b4"

          >

 <ImageView
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_marginLeft="15dp"
     android:src="@drawable/multicomponentes2"
     android:layout_gravity="center"
     />
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_marginTop="20dp" android:gravity="center"
            android:paddingRight="40dp">
        <TextView
                android:text="@string/labelEmail"
                android:layout_width="0dp"
                android:layout_height="wrap_content" android:id="@+id/tvLabelEmailLogin"
                android:textAlignment="viewEnd" android:textSize="14sp" android:paddingRight="10dp"
                android:layout_weight="0.4"
            android:textColor="@color/white"

            />
        <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:id="@+id/etEmailLogin"
                tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" android:layout_weight="0.6"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:gravity="center" android:paddingRight="40dp"
            android:layout_marginTop="20dp">
        <TextView
                android:text="Contrase침a:"
                android:layout_width="0dp"
                android:layout_height="wrap_content" android:id="@+id/tvLabelPasswordLogin" android:textAlignment="viewEnd"
                android:textSize="14sp"
            android:paddingRight="10dp"
            android:layout_weight="0.4"
            android:textColor="@color/white"
            />
        <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/etPasswordLogin" tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck"
                android:layout_weight="0.6"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvOlvideContrase침a"
        android:text="@string/forgot"
        android:textAlignment="center"
        android:layout_marginTop="10dp" android:clickable="true"
        tools:ignore="TouchTargetSizeCheck"
        android:onClick="olvideContrase침a"
        android:textColor="@color/white"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnLogin"
        android:text="@string/log_in"
        android:textSize="14sp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:backgroundTint="?attr/colorPrimaryVariant"
        android:onClick="iniciarSesi칩n"/>


        <Button
                android:text="@string/register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
            android:id="@+id/btnRegistrarse"
            android:textSize="14sp"
            android:layout_marginTop="40dp"
            android:backgroundTint="?attr/colorPrimaryVariant"
            android:onClick="registrarse"/>


</LinearLayout>